<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #eef2f7;
        }

        .profile-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 25px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }

        .profile-container:hover {
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #34495e;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fafafa;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: #34495e;
        }

        th {
            background-color: #2980b9;
            color: white;
            font-size: 1.1rem;
        }

        tr:hover {
            background-color: #f9fbfd;
            transition: background-color 0.2s ease;
        }

        form {
            display: inline;
        }

        input[type="text"],
        input[type="email"],
        textarea {
            width: 90%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
            outline: none;
            transition: border-color 0.2s ease;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        textarea:focus {
            border-color: #2980b9;
        }

        button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            background-color: #2980b9;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #1f6fa5;
        }

        button:active {
            background-color: #154b78;
        }

        @media (max-width: 600px) {
            table, th, td {
                display: block;
                width: 100%;
            }

            tr {
                margin-bottom: 10px;
                border: 1px solid #ddd;
            }

            form {
                display: block;
                margin-bottom: 15px;
            }

            input[type="text"],
            input[type="email"],
            textarea {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <h1>Manage Users</h1>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Bio</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.bio %></td>
                    <td>
                        <form action="/users/edit/<%= user.id %>" method="POST">
                            <input type="text" name="username" placeholder="username" autocomplete="off" value="<%= user.username %>" />
                            <input type="email" name="email" placeholder="email" autocomplete="off" value="<%= user.email %>"/>
                            <textarea name="bio" rows="3" placeholder="bio"></textarea>
                            <button type="submit" onclick="alert('Logout Dulu')">Update</button>
                        </form>
                        <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="alert('Logout Dulu')">Delete Account</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
