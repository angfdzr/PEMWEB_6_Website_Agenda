<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agenda</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
      }

      /* Navbar Styling */
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #333;
        padding: 10px 20px;
      }

      .navbar a {
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        text-transform: uppercase;
      }

      .navbar a:hover {
        background-color: #555;
      }

      /* Dropdown Menu */
      .dropdown {
        position: relative;
        display: inline-block;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        z-index: 1;
      }

      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
      }

      .dropdown-content a:hover {
        background-color: #f1f1f1;
      }

      .dropdown:hover .dropdown-content {
        display: block;
      }

      .dropdown:hover .dropbtn {
        background-color: #555;
      }

      h1 {
        margin-top: 20px;
        text-align: center;
        color: #333;
      }

      .container {
        margin: 20px;
      }

      .article-list {
        display: flex; 
        flex-wrap: wrap; 
        list-style: none;
        padding: 0;
        justify-content: space-between; 
      }

      .article-item {
        flex: 1 1 calc(33.333% - 20px); 
        margin: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 15px;
        background-color: #ffffff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
      }

      .article-item:hover {
        transform: scale(1.02);
      }

      .article-item h2 {
        margin: 10px 0;
        font-size: 24px;
        color: #333;
      }

      .article-item p {
        margin: 5px 0;
        color: #555;
      }

      .article-item a {
        display: inline-block;
        margin-right: 10px;
        color: #007bff;
        text-decoration: none;
      }

      .article-item a:hover {
        text-decoration: underline;
      }

      .add-article {
        text-align: center;
        margin: 20px 0;
      }

      .add-article a {
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
      }

      .add-article a:hover {
        background-color: #0056b3;
      }

      @media (max-width: 600px) {
        .navbar {
          flex-direction: column;
          align-items: flex-start;
        }

        .navbar a {
          padding: 8px;
          font-size: 14px;
        }

        .article-item {
          padding: 10px;
        }

        .article-item h2 {
          font-size: 20px;
        }

        .article-item a {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar Section -->
    <div class="navbar">
      <div>
        <a href="#">MyBlog</a>
        <a href="/index">Home</a>
        <a href="/articles">Buat Agenda</a>
      </div>
      <div class="dropdown">
        <a href="#" class="dropbtn">Guest</a>
        <div class="dropdown-content">
          <a href="/users">Manage Profil</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </div>

    <!-- Articles Section -->
    <div class="container">
      <h1>Agenda</h1>
      <div class="add-article">
        <a href="/articles/add">Tambah Agenda</a>
      </div>
      <ul class="article-list">
        <% articles.forEach(article => { %>
        <li class="article-item">
          <h2><%= article.title %></h2>
          <p><%= article.content.substring(0, 100) + '...' %></p>
          <div>
            <a href="/articles/edit/<%= article.id %>">Edit</a>
            <a href="/articles/delete/<%= article.id %>">Delete</a>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
